<div class="row justify-space-between-md">
  <div class="">
    <h2 class="page-title">Edit a post: Post ID {{post.id}}</h2>
    <form class="form updatepost-form">
      <div class="form-group">
        <label for="title-updatepost">Title:</label>
        <input class="form-input" type="text" id="title-updatepost" value="{{post.title}}" />
      </div>
      <div class="form-group">
        <label for="content-updatepost">Content:</label>
        <input class="form-input" type="text" id="content-updatepost" value="{{post.content}}" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Update</button>
      </div>
    </form>
    <form class="form deletepost-form">
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Delete</button>
      </div>
    </form>
  </div>
</div>

<script src="../../js/edit-post.js"></script>